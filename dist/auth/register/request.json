{
    "type": "object",
    "properties": {
        "command": {
            "const": "auth/register/request",
            "type": "string"
        },
        "data": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "username": {
                    "pattern": "^[A-Za-z0-9_-]+$",
                    "minLength": 2,
                    "maxLength": 20,
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "required": [
                "email",
                "username",
                "password"
            ]
        }
    },
    "required": [
        "command",
        "data"
    ],
    "$id": "auth/register/request"
}