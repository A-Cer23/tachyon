{
    "$id": "https://schema.beyondallreason.dev/tachyon/user/add/event.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "UserAddEvent",
    "tachyon": {
        "source": "server",
        "target": "user",
        "scopes": ["tachyon.lobby"]
    },
    "type": "object",
    "properties": {
        "type": { "const": "event" },
        "messageId": { "type": "string" },
        "commandId": { "const": "user/add" },
        "data": {
            "title": "UserAddEventData",
            "anyOf": [
                {
                    "type": "object",
                    "properties": {
                        "self": { "$ref": "../../definitions/privateUser.json" }
                    },
                    "required": ["self"]
                },
                {
                    "type": "object",
                    "properties": {
                        "users": {
                            "type": "array",
                            "items": { "$ref": "../../definitions/user.json" }
                        }
                    },
                    "required": ["users"]
                }
            ]
        }
    },
    "required": ["type", "messageId", "commandId", "data"]
}
