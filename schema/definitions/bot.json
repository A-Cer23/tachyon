{
    "$id": "https://schema.beyondallreason.dev/tachyon/definitions/bot.json",
    "title": "Bot",
    "type": "object",
    "properties": {
        "hostUserId": {
            "description": "UserId of the player hosting this AI",
            "type": "string",
            "format": "uuid"
        },
        "name": { "type": "string" },
        "aiShortName": { "type": "string" },
        "aiVersion": { "type": "string" },
        "customOptions": {
            "type": "object",
            "patternProperties": { "^(.*)$": {} }
        }
    },
    "required": [
        "hostUserId",
        "name",
        "aiShortName",
        "aiVersion",
        "customOptions"
    ]
}
