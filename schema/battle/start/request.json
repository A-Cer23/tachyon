{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://schema.beyondallreason.dev/tachyon/battle/start/request.json",
    "title": "BattleStartRequest",
    "scopes": [
        "tachyon.lobby"
    ],
    "type": "object",
    "properties": {
        "type": {
            "const": "request",
            "type": "string"
        },
        "messageId": {
            "type": "string"
        },
        "commandId": {
            "const": "battle/start",
            "type": "string"
        },
        "data": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "ip": {
                    "type": "string"
                },
                "port": {
                    "type": "number"
                }
            },
            "required": [
                "username",
                "password",
                "ip",
                "port"
            ],
            "title": "BattleStartRequestData"
        }
    },
    "required": [
        "type",
        "messageId",
        "commandId",
        "data"
    ]
}