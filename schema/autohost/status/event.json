{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://schema.beyondallreason.dev/tachyon/autohost/status/event.json",
    "title": "AutohostStatusEvent",
    "tachyon": {
        "source": "autohost",
        "target": "server",
        "scopes": [
            "tachyon.lobby"
        ]
    },
    "type": "object",
    "properties": {
        "type": {
            "const": "event",
            "type": "string"
        },
        "messageId": {
            "type": "string"
        },
        "commandId": {
            "const": "autohost/status",
            "type": "string"
        },
        "data": {
            "type": "object",
            "properties": {
                "maxBattles": {
                    "minimum": 0,
                    "type": "integer"
                },
                "currentBattles": {
                    "minimum": 0,
                    "type": "integer"
                }
            },
            "required": [
                "maxBattles",
                "currentBattles"
            ],
            "title": "AutohostStatusEventData"
        }
    },
    "required": [
        "type",
        "messageId",
        "commandId",
        "data"
    ]
}