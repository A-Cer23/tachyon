{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "autohost/sendCommand/request",
    "scopes": [
        "tachyon.lobby"
    ],
    "type": "object",
    "properties": {
        "type": {
            "const": "request",
            "type": "string"
        },
        "messageId": {
            "type": "string"
        },
        "commandId": {
            "const": "autohost/sendCommand",
            "type": "string"
        },
        "data": {
            "type": "object",
            "properties": {
                "battleId": {
                    "format": "uuid",
                    "type": "string"
                },
                "command": {
                    "type": "string"
                },
                "arguments": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "battleId",
                "command"
            ]
        }
    },
    "required": [
        "type",
        "messageId",
        "commandId",
        "data"
    ]
}