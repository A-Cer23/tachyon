{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "autohost/addPlayer/request",
    "scopes": [
        "tachyon.lobby"
    ],
    "type": "object",
    "properties": {
        "type": {
            "const": "request",
            "type": "string"
        },
        "messageId": {
            "type": "string"
        },
        "commandId": {
            "const": "autohost/addPlayer",
            "type": "string"
        },
        "data": {
            "type": "object",
            "properties": {
                "battleId": {
                    "format": "uuid",
                    "type": "string"
                },
                "userId": {
                    "$ref": "../../definitions/userId.json"
                },
                "name": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "required": [
                "battleId",
                "userId",
                "name",
                "password"
            ]
        }
    },
    "required": [
        "type",
        "messageId",
        "commandId",
        "data"
    ]
}