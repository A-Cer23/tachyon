{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2022",
        "module": "CommonJS",
        "lib": ["dom", "es6", "ES2022"],
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        "moduleResolution": "Node",
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "paths": {
            "*": ["src/*"]
        }
    },
    "include": ["src/**/*"]
}
