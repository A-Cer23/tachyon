{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "lib": ["es2022"],
        "sourceMap": true,
        "declaration": true,
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*", "package.json"]
}
