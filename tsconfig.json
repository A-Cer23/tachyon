{
    "compilerOptions": {
        "composite": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "lib": ["es2022"],
        "sourceMap": true,
        "declaration": true,
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*"],
    "ts-node": {
        "require": ["tsconfig-paths/register"],
        "swc": true
    }
}
