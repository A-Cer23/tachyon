{
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "rootDir": "./src",
        "target": "ES2022",
        "module": "CommonJS",
        "lib": ["dom", "es6", "ES2022"],
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "types",
        "moduleResolution": "Node",
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "ts-node": {
        "swc": true
    }
}
